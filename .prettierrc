{
  "singleQuote": true,
  "semi": false,
  "printWidth": 100,
  "trailingComma": "es5",
  "arrowParens": "always",
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "useTabs": true
      }
    },
    {
      "files": "*.yml,*.yaml",
      "options": {
        "tabWidth": 2,
        "useTabs": true
      }
    }
  ]
}
